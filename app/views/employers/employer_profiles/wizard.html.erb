<% if @progress_step == '2' %>

  <% if @step == '1' %>
    <h3>
      Employee Information
    </h3>
    <%= form_for @census_employee, url: {action: "create", employer_id: @employer_profile.id} do |f| %>
    <%= render 'wizard/wizard_member_fields', f: f %>
    <%= render 'wizard/wizard_census_employee_fields', f: f %>
    <h3>
      Address
    </h3>
    <%= f.fields_for :address, @census_employee.address, errors: {}, fieldset: false do |address| %>
      <%= render 'wizard/wizard_address_fields', f: address %>
    <% end %>
    <h3>
      Email
    </h3>
    <%= f.fields_for :email, @census_employee.email, errors: {}, fieldset: false do |email| %>
      <%= render 'wizard/wizard_email_fields', f: email %>
    <% end %>
    <h3>
      Dependents
    </h3>
    <%= render 'wizard/wizard_add_dependents', f: f %>
    <% end %>
  <% end %>

  <% if @step == '2' %>
    <h3>
      Employer Roster
    </h3>
    <div class="module census-employees-table">
      <%= render "wizard/wizard_employees_by_status", status: 'active' %>
    </div>
  <% end %>
<% end %>

<% if @progress_step == '3' %>

  <% if @step == '1' %>
    <h3>
      Start/End Date
    </h3>
    <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>
      <%= render 'wizard/wizard_benefit_period_fields', f: f %>
    <% end %>
  <% end %>

  <% if @step == '2' %>
    <h3>
      Open Enrollment
    </h3>
    <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>
      <%= render 'wizard/wizard_open_enrollment_fields', f: f %>
    <% end %>
  <% end %>

  <% if @step == '3' %>
    <h3>
      Coverage Start Date
    </h3>
    <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>
      <%= f.fields_for :benefit_groups, errors: {}, fieldset: false do |bg| %>
        <%= render 'wizard/wizard_eligibility_fields', f: bg %>
      <% end %>
    <% end %>

  <% end %>
<% end %>

<% if @progress_step == '4' %>
  <% if @step == '1' %>
    <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>
      <%= f.fields_for :benefit_groups, errors: {} do |bg| %>
        <%= render 'wizard/wizard_benefit_package_fields', f: bg %>
      <% end %>
    <% end %>
  <% end %>
  <% if @step == '2' %>
    <h3>
      Benefit Package Coverage Type
    </h3>
    <div class="n-radio-group">
      <div class="n-radio-row">
        <label class="n-radio" for="coverage_kind_health">
          <%= radio_button_tag 'coverage_kind', 'health', true, id: 'coverage_kind_health', class: 'n-radio' %>
          <span class="n-radio">
          </span>
          Health
        </label>
      </div>
      <div class="n-radio-row">
        <label class="n-radio" for="coverage_kind_dental">
          <%= radio_button_tag 'coverage_kind', 'dental', false, id: 'coverage_kind_dental', class: 'n-radio' %>
          <span class="n-radio">
          </span>
          Dental
        </label>
      </div>
    </div>
  <% end %>
  <% if @step == '3' %>
  <h3>
    Employer Offering
  </h3>
    <div id="home">
      <div class="benefits-setup-tab">
        <div class="offerings">
          <div class="row row-form-wrapper no-buffer heading">
            <div class="col-xs-12" id="offering_slider_header">
              <div class="col-xs-6">Offered <i class="fa fa-question-circle" data-toggle="tooltip" title="You must offer coverage to all eligible full-time employees who work on average, 30 hours a week. Employers can also offer coverage to other employees. While optional, it doesn’t cost you more to offer coverage to your employees’ families."></i></div>
              <div class="col-xs-6">Employer Contribution <i class="fa fa-question-circle" data-toggle="tooltip" title="Employers are required to contribute at least 50% of the premium costs for employees based on the reference plan selected except during the special annual enrollment period at the end of each year. Contributions towards family coverage are optional. You can still offer family coverage even if you don’t contribute."></i></div>
            </div>
          </div>
          <div class="benefits-fields">
  <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>

    <%= f.fields_for :benefit_groups, errors: {} do |bg| %>
      <%= bg.fields_for :relationship_benefits, errors: {}, fieldset: false do |rb|  %>
        <%= render 'wizard/wizard_relationship_benefit_fields', f: rb %>
      <% end %>
    <% end %>
  <% end %>
  </div>
  </div>
  </div>
  </div>
  <% end %>
  <% if @step == '4' %>
  <h3>
    Configure Offered Plans
  </h3>
  <%= form_for @plan_year, url: employers_employer_profile_plan_years_path(@employer_profile) do |f| %>
    <%= f.fields_for :benefit_groups, errors: {} do |bg| %>
        <%= render 'wizard/wizard_reference_plans_list', f: bg %>
    <% end %>
  <% end %>
  <% end %>
  <% if @step == '5' %>
  <h3>Select Reference Plan</h3>
  <h4>
    Now select a reference plan. The reference plan is used to cap employer costs. You’ll choose a reference plan. Then, your contribution towards employee premiums will be applied to the reference plan you choose regardless of which plans your employees select. After you select your reference plan, scroll down to review your costs.
  </h4>
  <br/>
  <div id="home">
    <div class="benefits-setup-tab">
    <div class="reference-plans col-xs-12">
      <%= render 'wizard/wizard_single_carriers' %>
    </div>
  </div>
  </div>
  <% end %>
<% end %>

<br class="clear"/>
