<div class="col-xs-12 bottom-pd messages-tab" id='inbox-messages'>
  <div class="no_margin">
    <h1 class="darkblue mz">Messages</h1>
  </div>

  <div>
  <div id="inbox_form" class="col-xs-12 no-pd">
    <span class="inboxes">
      <% if params[:folder] == 'inbox' %>
    <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'inbox'), class: 'active') do %>
      Inbox <span class="badge message-badge pull-right"><%= @employer_profile.inbox.unread_messages.size %></span>
    <% end %> |
    <% else %>
    <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'inbox')) do %>
      Inbox <span class="badge message-badge pull-right"><%= @employer_profile.inbox.unread_messages.size %></span>
    <% end %> |
      <% end %>
    <% if @sent_box == true %>
    <% if params[:folder] == 'inbox' %>

      <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'Sent'), class: 'active') do %>
        Sent
        <% end %>
      <% else %>
      <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'Sent')) do %>
        Sent
      <% end %>
      <% end %>
    <% end %>
    <% if params[:folder] == 'deleted' %>

      <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'deleted'), class: 'active') do %>
        Deleted
      <% end %>
      <% else %>
      <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'deleted')) do %>
        Deleted
      <% end %>
    <% end %>
    </span>
  </div>

   <% @folder = (@folder||'Inbox').capitalize %>
 <div class="row">
    <div class="col-xs-12 table-responsive" id="message_list_form">
      <table class="table table-hover">
        <thead>
          <tr>
            <th> <%= @folder %>: FROM</th>
            <th> Date  </th>
            <th>Subject</th>
          </tr>
        </thead>

        <tbody>
          <% if @employer_profile.inbox && @employer_profile.inbox.messages %>
          <%= render partial: "shared/inboxes/individual_message", :collection => @employer_profile.inbox.messages.select{|m| @folder.capitalize == (m.folder.try(:capitalize) || 'Inbox') }, :as => :message, locals: {provider: @employer_profile} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div id="show_message_form"></div>
  </div>
</div>
