<div class="col-xs-12 content-bottom">
  <h1 class="darkblue mz">
    Message Details
  </h1>
  <br>
<%- if @message.present? %>
  <ul class="list-group">
    <li class="list-group-item"> Sent By:  <%= "System Admin" %> <br></li>
    <li class="list-group-item"> Subject:  <%= @message.subject.to_s.html_safe %> <br></li>
    <li class="list-group-item"> <%= @message.body.to_s.html_safe %> <br></li>
  </ul>
  <br/>
  <% if @employer_profile.present? %>
  <%= link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, employers_employer_profile_path(@employer_profile.id, :tab=>'inbox', :folder=>'inbox'), class: 'btn btn-trans' %>
  <% else %>
  <%= link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, family_account_path(@provider, tab: 'messages', :folder=>'inbox'), class: 'btn btn-trans' %>
  <% end %>
  <% end %>
</div>
