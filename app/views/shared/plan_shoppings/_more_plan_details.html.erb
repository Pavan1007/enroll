<p class="pull-left">
  <% if @market_kind == 'shop' && @coverage_kind == 'health' %>
    <span class="ttu lg twelve">Employer: </span>
    <strong>
      <%= @benefit_group.try(:plan_year).try(:employer_profile).try(:legal_name) %>
    </strong> &nbsp;&nbsp;
  <% end %>
  <span class="ttu lg twelve">Plans:</span>
<strong id='plans-count'><%= @plans.count %></strong>

  <br/>
  <span class="ttu lg twelve">Coverage For:</span>
  <strong><%= @person.full_name %></strong> <% if @person.has_consumer_role? %><% else %> (employee) <% end %>+
  <strong><%= @hbx_enrollment.try(:humanized_dependent_summary) %> dependent(s)</strong>&nbsp;&nbsp;

</p>
