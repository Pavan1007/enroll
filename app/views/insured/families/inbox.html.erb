<% content_for :navigation do %>
  <%= render 'navigation' %>
<% end %>
<div class="col-xs-12">
  <% if params.has_key?(:message_id) %>
    <div class="row">
      <%= render partial: 'shared/inboxes/message', locals: {message: @message} %>
    </div>
  <% else %>
    <h1 class="darkblue mz">
      Messages
    </h1>
      <%= render 'inbox', provider: current_user.person %>
    <% end %>
</div>
