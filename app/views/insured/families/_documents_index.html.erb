<% accordion_element = 0 %>
  <% unless @person.has_consumer_role? %>
      <h4>No results found</h4>
  <% else %>

  <div class="module ivl-documents-table">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead class="thead-default">
        <tr>
          <th>
            Family Member
          </th>
          <th>
            Personal Verification Status
          </th>
          <th>
            Verification Type
          </th>
          <th>
            Verification Status
          </th>
          <th>
            Remaining Time
          </th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @family_members.each do |member|%>
        <tr class="<%= cycle("odd", "even top") %>">
          <td>
            <%= member.person.first_name %> <%= member.person.last_name%>
          </td>
          <td>
            <%= show_consumer_role_state(member.person.consumer_role) %>
          </td>
          <td>
          <% member.person.verification_types.each do |verif_type| %>
            <%= verif_type %>
            <br/>
          <% end %>
          </td>
          <td>
            <% member.person.verification_types.each do |verif_type| %>
              ?
              <br/>
            <% end %>
          </td>
          <td>
            <% member.person.verification_types.each do |verif_type| %>
            <%= time_remaining_in_words(member.person.created_at) %>
              <br/>
            <% end %>
          </td>
          <td>
            <i class="fa fa-plus fa-2x" data-toggle="tooltip" title="Add Document"></i>
          </td>
        </tr>
        <tr class="">

            <td colspan="5">
              <% member.person.consumer_role.vlp_documents.each do |vlp_doc| %>
                <%= vlp_doc.subject %>
                <br/>
              <% end %>

            </td>
            <td>
              <% member.person.consumer_role.vlp_documents.each do |vlp_doc| %>

              <% if vlp_doc.identifier.present? %>
                <% key = vlp_doc.identifier.split('#').last %>
                <%= link_to("/insured/verification_documents/download/#{key}") do %>
                    <i class="fa fa-download fa-2x" data-toggle="tooltip" title="Download Document"></i><br/>
                <% end %>
              <% end %>
              <% end %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

    <!-- Verification TABLE -->
    <div class="col-md-12">

      <!-- Verification table BODY  -->
      <% @family_members.each do |member|%>
          <% accordion_element += 1 %>

            <div class="accordion" id="docs-accordion">
              <div class="accordion-group">
                <div class="accordion-heading">
                  <a class="module accordion-toggle" data-toggle="collapse" data-parent="#docs-accordion" href="#docs_accordion<%=accordion_element%>">
                    <%= render partial: "verification_table", locals: {member: member} %>
                  </a>
                </div>

                <div id="docs_accordion<%=accordion_element%>" class="accordion-body collapse">
                  <div class="accordion-inner">
                    <%= render partial: "documents_table", locals: {member: member} %>
                  </div>
                </div>
              </div>
            </div>
      <% end %>
      <!-- >>>>> verification table body  -->
    </div>
    <!-- >>>>> verification table -->
  <% end %>
