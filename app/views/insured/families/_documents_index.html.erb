<% accordion_element = 0 %>
  <% unless @person.has_consumer_role? %>
      <h4>No results found</h4>
  <% else %>

  <div class="module ivl-documents-table panel">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead class="thead-default">
        <tr>
          <th>
            Family Member
          </th>
          <th>
            Personal Verification Status
          </th>
          <th>
            Verification Type
          </th>
          <th>
            Verification Status
          </th>
          <th>
            Remaining Time
          </th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @family_members.each do |member|%>
        <tr class="<%= cycle("odd", "even top") %>">
          <td>
            <%= member.person.first_name %> <%= member.person.last_name%>
          </td>
          <td>
            <%= show_consumer_role_state(member.person.consumer_role) %>
          </td>
          <td>
          <% member.person.verification_types.each do |verif_type| %>
            <%= verif_type %>
            <br/>
          <% end %>
          </td>
          <td>
            <% member.person.verification_types.each do |verif_type| %>
              ?
              <br/>
            <% end %>
          </td>
          <td>
            <% member.person.verification_types.each do |verif_type| %>
            <%= time_remaining_in_words(member.person.created_at) %>
              <br/>
            <% end %>
          </td>
          <td class="table-functions">
            <a data-toggle="collapse" href="#<%= member.id %>" aria-expanded="false" aria-controls="<%= member.id %>">
              <%= member.person.consumer_role.vlp_documents.present? ? '<i class="fa fa-caret-down fa-2x" data-toggle="tooltip" title="View Documents"></i>'.html_safe : '<i class="fa fa-plus fa-lg" data-toggle="tooltip" title="Add Documents"></i>'.html_safe %>
            </a>
          </td>
        </tr>

              <tr class="collapse dn" id="<%= member.id %>">
                <td colspan="6" class="td-container">
                  <div class="table-responsive">
                    <table class="table table-sm">
                    <% member.person.consumer_role.vlp_documents.each_with_index do |vlp_doc, i | %>
                    <tr class="<% if i == 0 %>bt-n<% elsif i+1 == member.person.consumer_role.vlp_documents.count %>bb<% end %>">
                      <td>
                        <%= vlp_doc.subject %>
                        &nbsp;
                        <% case vlp_doc.status %>
                          <% when "downloaded" %>
                            <span class="label label-success">Downloaded</span>
                          <% else %>
                            <span class="label label-warning">Warning</span>
                        <% end %>

                      </td>
                      <td class="table-functions">
                      <% if vlp_doc.identifier.present? %>
                        <% key = vlp_doc.identifier.split('#').last %>
                        <%= link_to("/insured/verification_documents/download/#{key}") do %>
                          <i class="fa fa-download fa-lg" data-toggle="tooltip" title="Download"></i>
                        <% end %>
                      <% end %>
                      <i class="fa fa-trash-o fa-lg" data-toggle="tooltip" title="Delete"></i>
                      </td>
                    </tr>
                    <% end %>
                    <tr class="upload bt-n">
                      <td colspan="6" class="td-container">
                        <%= render "docs_uploading_menu" %>
                      </td>
                    </tr>
                  </table>
                </div>
                </td>
              </tr>

        <% end %>
      </tbody>
    </table>
  </div>
</div>

  <% end %>
