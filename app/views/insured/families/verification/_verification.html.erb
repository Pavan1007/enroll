<div class="row">
  <% unless enrollment_group_verified?(@person) %>
    <div class="col-md-5">
      <h4>Verification due date: <%= verification_due_date(@person) %></h4>
      <% if current_user.has_hbx_staff_role? %>
        <%= link_to "Complete Verification", enrollment_verification_documents_path(:person_id => @person.id), class: "btn btn-danger btn-sm", data: { confirm: 'Click OK if you would like confirm verification for this family.' } %>
      <% elsif show_send_button_for_consumer?(@person) %>
        <%= link_to "Send documents for review", enrollment_docs_state_documents_path(:person_id => @person.id, :docs_status => "ready"), class: "btn btn-success btn-sm", method: :put, data: { confirm: 'Click OK if you would like to send all your documents for review.' } %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="module ivl-documents-table panel">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead class="thead-default">
      <tr>
        <th>Family Member</th>
        <th>Individual<br>Status</th>
        <th>Verification Type</th>
        <th>Documents</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @family_members.each do |member|%>
          <tr class="<%= cycle("odd", "even top") %>">
            <td>
              <%= member.person.first_name %> <%= member.person.last_name%>
            </td>
            <td>
              <%= show_consumer_role_state(member.person.consumer_role) %>
            </td>
            <td colspan="2">
              <% if unverified?(member.person) %>
                  <%= render partial: 'insured/families/verification/unverified_person', locals: {member: member} %>
              <% end %>
            </td>

            <td class="table-functions">
              <%= link_to "##{member.id}", { 'data-toggle' => 'collapse', 'aria-expanded' => false, 'aria-controls' => "#{member.id}" } do %>
                <% if member_has_uploaded_docs(member) %>
                      <i class="fa fa-caret-down fa-2x"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
          <div id="verification_docs_table">
            <%= render partial: "insured/families/verification/verification_docs_table", locals: {member: member} %>
          </div>
      <% end %>
      </tbody>
    </table>
  </div>
</div>