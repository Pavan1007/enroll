<div class ="container">
  <h3>My Quotes</h3>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" style="border: 1px solid gray">

    <div style='float:left; margin-left:30px; '>
         <div style='float: left; width: 255px; margin-left:30px'>
              Employees on Roster:
              <input id="employees_on_roster" data-slider-id='employees_on_rosterSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="5" data-slider-value="0" style='width:225px'
                 data-slider-ticks="[0, 50, 100]"
                 data-slider-ticks-labels='["0%", "50", "100"]'
               />
          </div>
      </div>
     <input name='employee_count' id='employee_count' value='0' type='hidden'>

      <div style='float:left; margin-left: 30px'>
        dropdown for the four family types
        </div>
        <div  style='float:left; margin-left: 30px'>
          button to use this roster in a quote
        </div>
    </div>

     <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table-wrapper" style="opacity: 1;">
          <tr>
            <th>Quote ID</th>
            <th>Quote Name</th>
            <th># of families</th>
            <th></th>
          </tr>
           <% @quotes.each do |q| %>
          <tr>
             <td><%=link_to "#{q.id}" , "/broker_agencies/quotes/#{q.id}/edit" %></td>
             <td><%= q.quote_name %></td>
             <td><%= q.quote_households.count %></td>
             <td><button type="button" id="close_button" data-quote-id="<%=q.id%>" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></td>
          </tr>
          <% end %>
        </table>
        <br><%=link_to "New Quote" , new_broker_agencies_quote_path , method: :get, class: "btn btn-trans", id: "new_quote"%>
      </div>
    </div>
  </div>
</div>
