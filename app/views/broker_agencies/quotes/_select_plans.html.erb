<% if @carriers %>
    <div class=' plan_selectors'>

        <div  id='carriers' style='width: 148px;'>
            <b>Carriers</b><br/>
            <%- @carriers.each do |carrier| %>
                   <div id="<%=carrier[1]%>"  class="criteria <%=carrier[0]=='any' && 'active'%>" style='width: 148px;'><%=carrier[0] %> </div>
             <% end %>
        </div>

        <div id='metals'>
            <b>Metal Levels</b> </br>
            <%- @metals.each do |metal| %>
                <div id="<%=metal%>"  class="criteria <%=metal=='any' && 'active'%>"> <%= metal %> </div>
            <% end %>
        </div>
      
        <div id='plan_types'>
            <b>Plan Types</b> <br>
            <%- @plan_types.each do |type| %>
                <div id="<%=type%>" class="criteria <%=type=='any' && 'active'%>"> <%= type %> </div>
            <% end %>
        </div>

        <div id='dc_in_network'>
             <b>DC Network</b> <br>
          <%- @dc_network.each do |choice| %>    
            <div  id="<%=choice%>" class="criteria <%=choice=='any' && 'active'%>"> <%= choice %> </div>
          <% end %>
        </div>

        <div id='nationwide'>
            <b>Nationwide</b> <br>
          <%- @nationwide.each do |choice| %>    
            <div id="<%=choice%>" class="criteria <%=choice=='any' && 'active'%>"><%= choice %> </div>
          <% end %>
        </div>
    </div>

    <div style='min-width:40px; float:left'>&nbsp;&nbsp;&nbsp;</div>
    <div style='float:left; width 350px; display: block' >
        <div> Limit maximum deductible 0-$6000 </div>
        <input id="ex1" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="6000" data-slider-step="1" data-slider-value="6000" style='width:300px'
          data-slider-ticks="[0, 2000, 4000, 6000]"
          data-slider-ticks-labels='["$0", "$2000", "$4000", "$6000"]'
        />
    </div>
      <br/>

<% end %>

