<%= @provider.inspect %> -->
<div class="mainmenu">
  <div class="container">
    <ul role="tablist" class="list-unstyled list-inline" id="myTab">
      <% if params.has_key?(:user) %>
      <li role="presentation" id="home-tab" <%= menu_tab_class(active_tab, "home-tab") %>>
        <%= link_to(broker_agencies_profile_path(@broker_agency_profile), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="hidden-xs">Home</span>
          <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>
      <li role="presentation" id="employers-tab" <%= menu_tab_class(active_tab, "employers-tab") %>>
       <%= link_to(employers_broker_agencies_profiles_path(id: @broker_agency_profile.id), "aria-expanded" => "true", :remote => true, "aria-controls" => "employers", "role" => "tab" ) do  %>
          <span class="hidden-xs">Employers</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Employers"></span>
       <% end %>
      </li>
      <li role="presentation" id="families-tab" <%= menu_tab_class(active_tab, "families-tab") %>>
       <%= link_to(family_index_broker_agencies_profiles_path(id: @broker_agency_profile), "aria-expanded" => "true", :remote => true, "aria-controls" => "families", "role" => "tab" ) do  %>
          <span class="hidden-xs">Families</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Families"></span>
       <% end %>
      </li>
      <% else %>
      <li role="presentation" id="home-tab" <%= menu_tab_class(active_tab, "home-tab") %>>
        <%= link_to(broker_agencies_profile_path(@provider), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="hidden-xs">Home</span>
          <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>

      <li role="presentation" id="employers-tab" <%= menu_tab_class(active_tab, "employers-tab") %>>
       <%= link_to(employers_broker_agencies_profiles_path(id: @provider.id), "aria-expanded" => "true", :remote => true, "aria-controls" => "employers", "role" => "tab" ) do  %>
          <span class="hidden-xs">Employers</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Employers"></span>
       <% end %>
      </li>
      <li role="presentation" id="families-tab" <%= menu_tab_class(active_tab, "families-tab") %>>
       <%= link_to(family_index_broker_agencies_profiles_path(id: @id), "aria-expanded" => "true", :remote => true, "aria-controls" => "families", "role" => "tab" ) do  %>
          <span class="hidden-xs">Families</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Families"></span>
       <% end %>
      </li>

      <% end %>
      <% if @staff_role %>
      <li role="presentation" id="brokers-tab" <%= menu_tab_class(active_tab, "brokers-tab") %>>
       <%= link_to(broker_agencies_profile_applicants_path(@provider), :remote => true, "aria-expanded" => "true", "aria-controls" => "brokers", "role" => "tab" ) do  %>
          <span class="hidden-xs">Brokers</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Brokers"></span>
       <% end %>
      </li>

      <li role="presentation" id="inbox-tab" <%= menu_tab_class(active_tab, "inbox-tab") %>>
       <%= link_to(broker_agencies_profile_path(id: @provider, folder: 'inbox', mailbox: 'agency'), "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab") do  %>
          <span class="badge message-unread"><%=begin; @provider.inbox.unread_messages.try(:count); rescue; return 0; end %></span>
        Agency Mail
       <% end %>
      </li>
      <% end %>
      <% if params.has_key?(:user) %>
      <li role="presentation" id="inbox-tab" <%= menu_tab_class(active_tab, "inbox-tab") %>>
       <%= link_to(broker_agencies_profile_path(id: @provider, folder: 'inbox', user: 'admin'), "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab") do  %>
          <span class="badge message-unread"><%=begin; @provider.inbox.unread_messages.try(:count); rescue; return 0; end %></span>
        Broker Mail
       <% end %>
      </li>
      <% else %>
        <li role="presentation" id="inbox-tab" <%= menu_tab_class(active_tab, "inbox-tab") %>>
         <%= link_to(broker_agencies_profile_path(id: @provider, folder: 'inbox'), "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab") do  %>
            <span class="badge message-unread"><%=begin; @provider.inbox.unread_messages.try(:count); rescue; return 0; end %></span>
          Broker Mail
         <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
