$primary-color: #007bc4;
$primay-active-button-text-color: #ffffff;
$primary-bold: 600;

.module {
	&.update-browser-warning {
			color: #000;
			position: relative;
			width: 50%;
			top: 15%;
			border: solid 1px #b7b7b7;
			background-color: rgba(256,256,256,1);
			margin: auto;
			text-align: center;
			padding-bottom: 50px;
			.starter {
				margin: auto;
				padding: 15px 20px 20px;
			}
			.bg-grey {
				padding: 10px;
			}
			.browser-icon {
				height: 64px;
				width: 64px;
				margin: 0 auto 7px;
				text-align: center;
				background: url('<%= asset_path("images/broswericons_128.png") %>');
				&.chrome {
					background-position: left top;
				}
				&.safari {
					background-position: right top;
				}
				&.firefox {
					background-position: left bottom;
				}
			}
	}
  &.market-selection {
    padding: 0 15% 5%;
    .btn-primary {
      padding: 4%;
      font-size: auto;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-color;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }
  }
  &.verification-dashboard {
    border-bottom: 2px solid #7e8994;
    background-color: #FFFFFF;
    padding: 2px;
  }
  &.documents-dashboard {
    border-bottom: 2px solid rgba(102, 108, 118, 0.42);
    border-left: 2px solid rgba(102, 108, 118, 0.42);
    border-right: 2px solid rgba(102, 108, 118, 0.42);
    background-color: #E3E3E3;
    padding: 2px;
  }

  &.doc_upload {
    background-color: #E3E3E3;
    border-left: 2px solid rgba(102, 108, 118, 0.42);
    border-right: 2px solid rgba(102, 108, 118, 0.42);
  }

  &.header_doc_table {
    background-color: rgba(65, 62, 71, 0.54);
    color: #fbfdff;
  }

  &.accordion-toggle {
    color:#000000;
  }
	&.census-employees-table {
		margin-top: 1.25%;
		.table {
			.thead-default {
				tr {
					background-color: #fff;
					th {
						text-align: center;
						vertical-align: middle;
					}
				}
			}
			tbody {
				tr {
					&.top {
						&.even {
							background-color: #fff;
							&:hover {
								background-color: #f5f5f5;
							}
						}
					}
					td {
						vertical-align: middle;
						&.table-functions {
							min-width: 70px;
							.fa {
								cursor: pointer;
								display: inline-block;
								color: #b7b7b7;
								margin-left: 5px;
							}
						}
					}
					&:hover {
						td {
							&.table-functions {
								.fa {
									&:hover {
										color: #23527c;
									}
								}
							}
						}
					}
				}
			}
		}
	}
	&.ivl-documents-table {
		margin-top: 1.25%;
		.table {
			.thead-default {
				tr {
					background-color: #fff;
					th {
						text-align: center;
						vertical-align: middle;
					}
				}
			}
			tbody {
				tr {
					&.top {
						&.even {
							background-color: #ffffff !important;
							&:hover {
								background-color: #f5f5f5 !important;
							}
						}
					}
					td {
						vertical-align: middle;
						&.table-functions {
							min-width: 70px;
							.fa {
								cursor: pointer;
								display: inline-block;
								color: #b7b7b7;
								margin-left: 5px;
							}
						}
					}
					&:hover {
						td {
							&.table-functions {
								.fa {
									&:hover {
										color: #23527c;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
