$primary-color: #007bc4;
$primay-active-button-text-color: #ffffff;
$primary-bold: 600;

.module {
	&.update-browser-warning {
			color: #000;
			position: relative;
			width: 50%;
			top: 15%;
			border: solid 1px #b7b7b7;
			background-color: rgba(256,256,256,1);
			margin: auto;
			text-align: center;
			padding-bottom: 50px;
			.starter {
				margin: auto;
				padding: 15px 20px 20px;
			}
			.bg-grey {
				padding: 10px;
			}
			.browser-icon {
				height: 64px;
				width: 64px;
				margin: 0 auto 7px;
				text-align: center;
				background: url('<%= asset_path("images/broswericons_128.png") %>');
				&.chrome {
					background-position: left top;
				}
				&.safari {
					background-position: right top;
				}
				&.firefox {
					background-position: left bottom;
				}
			}
        }
	&.employer-welcome {
		.left-icon-section {
			margin-bottom: 2.5%;
			a {
				cursor: pointer;
				&:hover {
					text-decoration: underline;
				}
				.fa {
					color: #007bc4;
				}
			}
			&.important {
				margin-top: 7.5%;
				.pdf-image {
					img {
						max-height: 80px;
					}
				}
			}
			h4 {
				margin-top: 0;
			}
			.x-right.dn {
				margin-bottom: 5%;
			}
			.icon-left-download {
				padding: 10px 0;
			}
		}
		.close-right {
			.x {
				img {
					cursor: pointer;
				}
			}
		}
	}
  &.market-selection {
    padding: 0 15% 5%;
    .btn-primary {
      padding: 4%;
      font-size: auto;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-color;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }
  }
	&.modal-footer {
		.modal-sbc-link {
			text-align: left;
			position: relative;
			.fa.fa-file-pdf-o {
				margin: 2px auto auto 5px;
			}
			.sbc-text {
				font-size: 14px;
				margin-left: 10px;
				position: absolute;
				white-space: nowrap;
				top: 10px;
			}
		}
	}
	&.health_analytics {
		#continue {
			width: 100%;
		}
		.selectric-wrapper {
			top: -10px;
		}
		.family-member {
			.slider {
				margin-left: 5%;
				width: 90%;
			}
			h5 {
				text-align: center;
			}
			span {
				color: #007bc4;
			}
			.panel-heading {
				border-bottom: solid 1px #eee;
			}
			.panel-footer {
				background-color:#007bc4;
			  border-color: #007bc4;
				span {
					color: #FFFFFF;

				}
			}
		}
		input[type=checkbox] {
       display: none;
       + label > i.fa {
         color: #69A30D;
       }
     }
     .checkbox {
       display: block;
       margin: auto;
     }
     .checkbox {
       &>div {
         display: inline-block;
         margin: auto;
       }
     }
     .checkbox label {
       padding-left: 0;
     }
     .checkbox label label {
       display: inline;
       padding-left: 0;
     }
     .checkbox label label + span {
       display: inline-block;
       position: relative;
       text-transform: capitalize;
       font-size: 12px;
       top: -6px;
       left: 5px;
     }
     input[type=checkbox]:disabled + label i {
       color: #b7b7b7;
       cursor: not-allowed;
     }
     input[type=checkbox] + label i {
       &:first-of-type {
         display: none;

       }
       &:last-of-type {
         display: inline-block;
         width: 30px;
       }
     }
     input[type=checkbox]:checked + label i {
       &:first-of-type {
         display: inline-block;
         width: 30px;
       }
       &:last-of-type {
         display: none;
       }
     }
		 &.wellness-plans {
			 padding: 15px 0;
		 }
	}
}
